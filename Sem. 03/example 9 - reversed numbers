#include <iostream>

using namespace std;

int main()
{
	int count;
	cin >> count;

	for (int i = 1; i <= count; i++)
	{
		for (int k = 0; k < count - i; k++)
		{
			cout << " ";
		}
		for (int j = i; j >= 1; j--)
		{
			cout << j;
		}
		cout << endl;
	}

	for (int i = count - 1 ; i >=1; i--)
	{
		for (int k = 0; k < count - i; k++)
		{
			cout << " ";
		}
		for (int j = i; j >= 1; j--)
		{
			cout << j;
		}
		cout << endl;
	}
}
